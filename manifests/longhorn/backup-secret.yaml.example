# Longhorn S3 Backup Credentials Secret (Example)
# Copy this file to backup-secret.yaml and fill in your credentials
# DO NOT commit backup-secret.yaml to git (it's in .gitignore)

apiVersion: v1
kind: Secret
metadata:
  name: longhorn-backup-secret
  namespace: longhorn-system
type: Opaque
stringData:
  # AWS S3 credentials
  AWS_ACCESS_KEY_ID: "your-access-key-id"
  AWS_SECRET_ACCESS_KEY: "your-secret-access-key"
  AWS_ENDPOINTS: "https://s3.amazonaws.com"  # Or your S3-compatible endpoint

  # For Backblaze B2:
  # AWS_ACCESS_KEY_ID: "your-b2-key-id"
  # AWS_SECRET_ACCESS_KEY: "your-b2-application-key"
  # AWS_ENDPOINTS: "https://s3.us-west-000.backblazeb2.com"

  # Encryption passphrase (optional but recommended)
  CRYPTO_KEY_VALUE: "your-encryption-passphrase"
  CRYPTO_KEY_PROVIDER: "secret"
  CRYPTO_KEY_CIPHER: "aes256"

# Usage:
# 1. Copy this file: cp backup-secret.yaml.example backup-secret.yaml
# 2. Edit backup-secret.yaml with your actual credentials
# 3. Apply: kubectl apply -f backup-secret.yaml
# 4. Update values.yaml to uncomment backupTarget and backupTargetCredentialSecret
